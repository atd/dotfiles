# social_stream
set default-path ~/dev/social_stream
new -s Work -n dev

set default-path ~/dev/social_stream
splitw -h -p 50
splitw -v -p 50 -t 0
splitw -v -p 50 -t 1

# demo-social-stream
set default-path ~/dev/social_stream-staging
neww -n demo
splitw -h -p 50
set default-path ~/dev/social_stream-demo
splitw -v -p 50 -t 0
splitw -v -p 50 -t 1

# social_stream-stable
#
